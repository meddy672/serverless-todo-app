{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap":true,
    "lib": [
      "es6"
    ],
    "types": ["node", "jasmine"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es6",
    "outDir": "dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["src/**/*"],
}
